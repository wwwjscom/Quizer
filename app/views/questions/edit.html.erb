<h1>Editing question</h1>

<% form_for(@question, :url => [@exam, @question]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :exam_id %><br />
    <%= f.text_field :exam_id %>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@exam, @question] %> | 
<%= link_to 'Back', exam_questions_path(@exam) %>
