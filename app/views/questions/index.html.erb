<h1>Listing questions</h1>

<table>
  <tr>
    <th>Exam</th>
    <th>Question</th>
    <th>Answer</th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%=h question.exam_id %></td>
    <td><%=h question.question %></td>
    <td><%=h question.answer %></td>
    <td><%= link_to 'Show', [@exam, question] %></td>
    <td><%= link_to 'Edit', edit_exam_question_path(@exam, question) %></td>
    <td><%= link_to 'Destroy', exam_question_path(@exam, question), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New question', new_exam_question_path %>
