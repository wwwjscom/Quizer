<h1>Listing exams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%=h exam.name %></td>
    <td><%=h exam.time %></td>
    <td><%= link_to 'Show', exam %></td>
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Questions', exam_questions_path(exam) %></td>
    <td><%= link_to 'Take Exam', ask_exam_question_path(exam, 1) %></td>
    <td><%= link_to 'Destroy', exam, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New exam', new_exam_path %>
